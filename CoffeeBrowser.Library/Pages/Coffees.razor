@page "/coffees"
@inject ICoffeeService CoffeeService

<h1>Cofees</h1>

@if (coffees is null)
{
    <span>Loading...</span>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var coffie in coffees)
            {
                <tr>
                    <td>@coffie.Name</td>
                    <td>@coffie.Description</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<Coffee>? coffees = null;

    protected override async Task OnInitializedAsync()
    {
        coffees = await CoffeeService.LoadCoffeesAsync();
    }
}
